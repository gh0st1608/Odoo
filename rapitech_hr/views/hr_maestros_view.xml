    <odoo>
     <!--INICIO VINCULO FAMILIAR-->
        <record id="view_hr_bond_family_form" model="ir.ui.view">
            <field name="name">hr.bond.family.form</field>
            <field name="model">hr.bond.family</field>
            <field name="arch" type="xml">
                <form string="Vinculo Familiar">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      <record id="view_hr_bond_family_tree" model="ir.ui.view">
            <field name="name">hr.bond.family.tree</field>
            <field name="model">hr.bond.family</field>
            <field name="arch" type="xml">
                <tree string="Vinculo Familiar">
                    <field name="name"/>
                </tree>
            </field>
        </record>

      <record id="hr_bond_family_action" model="ir.actions.act_window">
            <field name="name">Vinculo Familiar</field>
            <field name="res_model">hr.bond.family</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea una vinculo familiar
                </p>
            </field>
        </record>

        <menuitem name="Vinculo Familiar"
              parent="hr.menu_human_resources_configuration"
              id="menu_hr_bond_family_action"
              action="hr_bond_family_action"/>


